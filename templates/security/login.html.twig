{%  extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="cover-section">
        <div class="container">
            <h1>
                Acc&eacute;dez &agrave; bien plus, connectez-vous !
            </h1>
            {% if error %}

                <div class="alert alert-danger">
                    {{ error.messageKey | trans(error.messagedata, 'security') }}
                </div>

            {% endif %}

            <div class="d-flex flex-row justify-content-center login">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label class="green" for="username">Nom d'utilisateur</label>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </span>
                            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                            </span>
                            <input type="password" id="password" name="_password" class="form-control">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">Se connecter </button>
                </form>
            </div>

        </div>
        <div class="container">
            <div>
                <a href="{{ path('newuser') }}">Cr&#233;er un compte</a>
            </div>
        </div>
    </div>

{% endblock %}