<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <link rel="stylesheet" href="fonts/glyphicons-halflings-regular.svg">
        <link rel="stylesheet" href="fonts/ProximaNovaA-Semibold.css">
        <link rel="stylesheet" href="fonts/ProximaNova-Extrabld.css">
        <link rel="stylesheet" href="fonts/ProximaNovaA-Regular.css">
        <link rel="stylesheet" href="fonts/ProximaNovaA-Bold.css">
        <link rel="stylesheet" href="css/bootstrap.css">
        <link rel="stylesheet" href="css/animate.min.css">
        <link rel="stylesheet" href="css/style.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-light header-section">
            <!-- Brand and toggle get grouped for better mobile display -->
            <a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset('image/logo.png')}}" alt="logo" class="img-responsive"></a>
            <button class="navbar-toggler navbar-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a href="{{ path('home') }}">Accueil</a></li>
                    <li class="nav-item disabled" data-toggle="tooltip" data-placement="bottom" title="Bientôt disponible"><a href="#">R&eacute;servation</a></li>
                    <li class="nav-item disabled" data-toggle="tooltip" data-placement="bottom" title="Bientôt disponible"><a href="#">T&eacute;moignages</a></li>
                    <li class="nav-item"><a href="{{ path('about') }}">Nous conna&icirc;tre</a></li>
                    <li class="nav-item disabled" data-toggle="tooltip" data-placement="bottom" title="Bientôt disponible"><a href="#">Blog</a></li>
                    <li class="nav-item"><a href="{{ path('contact') }}">Contact</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <!-- <li class="nav-item disabled"><a href="#"><i class="fa fa-search"></i></a></li> -->
                    <li class="nav-item disabled"><a href="#"><i class="fa fa-shopping-cart"></i>Panier</a></li>

                    {% if app.user %}
                        <li class="nav-item"><a href="{{ path('logout') }}"><i class="fa fa-sign-out"></i></a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"><a href="{{ path('admin') }}">Admin</a></li>
                        {% else %}
                            <li class="nav-item"><a href="{{ path('editprofile') }}">Mon compte</a></li>
                        {% endif %}
                        {% else %}
                            <li class="nav-item"><a href="{{ path('login') }}"><i class="fa fa-sign-in"></i></a></li>
                    {% endif %}
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>

        {% block body %}{% endblock %}

        <div class="footer-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-2">
                        <ul class="social-media">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-md-8 copyright">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('home') }}">Accueil</a></li>
                            <li class="disabled" data-toggle="tooltip" data-placement="bottom" title="Bientôt disponible"><a href="#" >R&eacute;servation</a></li>
                            <li class="disabled" data-toggle="tooltip" data-placement="bottom" title="Bientôt disponible"><a href="#">T&eacute;moignages</a></li>
                            <li><a href="{{ path('about') }}">Nous conna&icirc;tre</a></li>
                            <li class="disabled" data-toggle="tooltip" data-placement="bottom" title="Bientôt disponible"><a href="#">Blog</a></li>
                            <li><a href="{{ path('contact') }}">Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-md-2">
                        <div class="top-button">
                            <a class="scroll" href="#top-button"><i class="fa fa-arrow"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container center">
                Propos&eacute; par <strong>NoX &copy;</strong> -
                {% if app.user %}
                    <a href="{{ path('logout') }}"><i class="fa fa-sign-out"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                         - <a href="{{ path('admin') }}">Admin</a>
                    {% else %}
                         - <a href="{{ path('editprofile') }}">Mon compte</a>
                    {% endif %}
                {% else %}
                     - <a href="{{ path('login') }}"><i class="fa fa-sign-in"></i></a>
                {% endif %}
            </div>
        </div>

        {% block javascripts %}{% endblock %}
        <script src="js/vendor/jquery-1.11.2.min.js"></script>
        <script src="js/vendor/bootstrap.min.js"></script>
        <script src="js/wow.min.js"></script>
        <script src="js/custom.js"></script>
    </body>
</html>
