{%  extends 'base.html.twig' %}

{% block title %}SpaProject{% endblock %}

{% block body %}
    <div class="cover-section" id="top-button">
        <div class="container">
            <div class="row">
                <div class="col-md-12 wow fadeInDown animated">
                    <div class="slider-item">
                        <img src="{{ asset('image/logo-simple.png') }}" width="117" height="144" alt="">

                        {% if app.user %}
                        <h1>Bienvenue {{ app.user.prenom }} {{ app.user.nom }}.</h1>
                         {% else %}
                        <h1>Anne-C&eacute;cile Viault Chervier</h1>
                        <p>Masseur-kin&eacute;sith&eacute;rapeute &agrave; Venelles, je vous propose des prestations de Massage Californien &agrave; mon cabinet pour tous les particuliers.</p>
                        {%  endif %}
                    </div>
                    {% for messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="purilfy-section">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="purifliy-item wow fadeInDown animated">
                        {% if app.user %}
