{%  extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <div class="cover-section" id="top-button">
        <div class="container">
            <div class="row center">
                <img src="image/logo-simple.png" width="117" height="144" alt="">
            </div>
            <h1>Nous contacter !</h1>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="media-container-column col-lg-8" data-form-type="formoid">
                    {{ form_start(form) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>
                    <div class="row row-sm-offset">
                        <div class="col-md-4 multi-horizontal" data-for="firstname">
                            {{ form_row(form.prenom) }}
                        </div>
                        <div class="col-md-4 multi-horizontal" data-for="lastname">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-4 multi-horizontal" data-for="phone">
                            {{ form_row(form.phone) }}
                        </div>
                    </div>
                    {{ form_row(form.email) }}{{ form_help(form) }}

                    {{ form_rest(form) }}
                    <div class="form-group">
                        <button class="btn btn-lg btn-success">Envoyer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}